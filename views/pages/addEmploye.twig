{% extends "../layouts/base.twig" %}

{% block title %}
	<title>Ajouter un/e employé/e</title>
{% endblock %}

{% block main %}
	<main class="bg-[rgb(191,167,127)] min-h-screen py-12 px-4">
		<div class="container mx-auto bg-white rounded-lg shadow-xl p-6">
			<h1 class="text-4xl font-bold text-black mb-8">Ajouter un/e employé/e</h1>
			<form action="/addEmploye" method="POST" enctype="multipart/form-data" class="space-y-4">
				<div>
					<label for="firstname" class="block text-sm font-medium text-black">Prénom</label>
					<input type="text" class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-2" id="firstname" name="firstname" required>
				</div>
				<div>
					<label for="lastname" class="block text-sm font-medium text-black">Nom</label>
					<input type="text" class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-2" id="lastname" name="lastname" required>
				</div>
				<div>
					<label for="mail" class="block text-sm font-medium text-black">Email</label>
					<input type="email" class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-2" id="mail" name="mail" required>
				</div>
				<div>
					<label for="password" class="block text-sm font-medium text-black">Mot de passe</label>
					<input type="password" class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-2" id="password" name="password" required>
				</div>
				<div>
					<label for="age" class="block text-sm font-medium text-black">Âge</label>
					<input type="number" class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-2" id="age" name="age" required>
				</div>
				<div>
					<label for="sexe" class="block text-sm font-medium text-black">Sexe</label>
					<select class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-2" id="sexe" name="sexe" required>
						<option value="">Sélectionnez...</option>
						<option value="M">Masculin</option>
						<option value="F">Féminin</option>
						<option value="Autre">Autre</option>
					</select>
				</div>
				<div>
					<label for="fonction" class="block text-sm font-medium text-black">Fonction</label>
					<input type="text" class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-2" id="fonction" name="fonction" required>
				</div>
				<div>
					<label for="file" class="block text-sm font-medium text-black mb-2">Ajouter une photo (optionnel)</label>
					<input type="file" id="image" name="photo" accept="image/*" class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-2 text-black">
				</div>

				<button class="bg-[rgb(191,167,127)] text-black py-2 px-4 rounded hover:bg-[rgba(191,167,127,.8)]">Créer</button>
			</form>
			<a href="/home" class="mt-4 inline-block bg-gray-200 text-black py-2 px-4 rounded hover:bg-gray-300">Retourner au tableau de bord</a>
		</div>
	</main>
{% endblock %}
