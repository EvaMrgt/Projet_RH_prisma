{% extends "../layouts/base.twig" %}
{% block title %}
	<title>{{title|default('Inscription Entreprise')}}</title>
{% endblock %}
{% block main %}
	<main class="bg-[rgb(191,167,127)] min-h-screen flex items-center justify-center py-12">
		<section class="bg-white rounded-lg shadow-xl p-10 max-w-md w-full border border-[rgb(191,167,127)]">
			<div class="mb-8 text-center">
				<h2 class="text-3xl font-serif font-bold text-black">Inscription Entreprise</h2>
			</div>
			<div>
				<form action="/register" method="post" class="space-y-6">
					<div>
						<label for="name" class="block text-sm font-medium text-black">Nom de l'entreprise</label>
						<input type="text" id="name" name="name" required autocomplete="off" class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-3">
					</div>
					<div>
						<label for="mail" class="block text-sm font-medium text-black">Adresse e-mail</label>
						<input type="email" id="mail" name="mail" required class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-3">
					</div>
					<div>
						<label for="password" class="block text-sm font-medium text-black">Mot de passe</label>
						<input type="password" id="password" name="password" required class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-3">
					</div>
					<div>
						<label for="confirmPassword" class="block text-sm font-medium text-black">Confirmation du mot de passe</label>
						<input type="password" id="confirmPassword" name="confirmPassword" required class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-3">
					</div>
					<div>
						<label for="director" class="block text-sm font-medium text-black">Nom du directeur</label>
						<input type="text" id="director" name="director" required class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-3">
					</div>
					<div>
						<label for="siret" class="block text-sm font-medium text-black">Num√©ro SIRET</label>
						<input type="text" id="siret" name="siret" required pattern="\d{14}" title="Le SIRET doit contenir 14 chiffres" class="mt-1 block w-full border border-[rgb(191,167,127)] rounded-md shadow-sm focus:ring focus:ring-[rgb(191,167,127)] focus:border-[rgb(191,167,127)] p-3">
					</div>
					{% if error %}
						<p class="text-red-700 text-sm mt-2">
							{{err.confirmPassword}}
						</p>
					{% endif %}
					<div>
						<button type="submit" class="w-full bg-[rgb(191,167,127)] text-black hover:bg-[rgba(191,167,127,.8)] py-3 rounded-md transition duration-300 shadow-md hover:shadow-lg font-semibold">
							Inscrire l'entreprise
						</button>
					</div>
				</form>
			</div>
		</section>
	</main>
{% endblock %}